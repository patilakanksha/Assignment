@model IEnumerable<Assignment.Models.Hotel>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <h2 class="text-center mt-5">All Hotels</h2>

   

    <div class="row justify-content-center">
        <div class="col-8">
            <div class="row">
                <div class="col-md-6">

                    @Html.ActionLink("Add New", "Add", "Hotel", null, new { @class = "btn btn-success" })
                </div>
                <div class="col-md-6">
                    Total : @ViewData["TotalHotelCount"]
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-custom">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contact)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contact)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Update", "Hotel", new { id = item.HotelId }, new { @class = "btn btn-warning btn-sm" }) |
                                    @Html.ActionLink("Details", "Details", "Hotel", new { id = item.HotelId }, new { @class = "btn btn-primary btn-sm" }) |
                                    @Html.ActionLink("Delete", "Delete", "Hotel", new { id = item.HotelId }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
